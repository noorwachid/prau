program: clang++

standard: -std=c++<standard>

directory:
  header: -I<directory>
  library: -L<directory>

file: 
  object: <source>.o 
  library: lib<name>.so
  executable: <name>

builder:
  object: -o <file> -c
  library: -o <file> -fPIC -shared
  executable: -o <file>

flags:
  - -xc++
  - -Wall
  - -Wextra

on-platforms:
  darwin:
    file: 
      library: lib<name>.dylib

    builder:
      library: -o <file> -fPIC -dinamiclib

